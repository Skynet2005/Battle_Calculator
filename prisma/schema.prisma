// Prisma schema for battle_calculator
// Maps to existing FastAPI SQLAlchemy models `users` and `user_settings`

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int           @id @default(autoincrement())
  username      String        @unique
  password_hash String
  created_at    DateTime      @default(now())
  settings      UserSettings?

  @@map("users")
  @@index([username])
}

model UserSettings {
  id         Int      @id @default(autoincrement())
  user_id    Int      @unique
  data       String
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])

  @@map("user_settings")
  @@index([user_id])
}


